        <ListBox Height="287" HorizontalAlignment="Left" Margin="12,12,0,0" Name="chatters" VerticalAlignment="Top" Width="113" BorderBrush="#FF1E7387" SelectionChanged="chatters_SelectionChanged" />
        <ScrollViewer Height="175" HorizontalAlignment="Left" Margin="149,12,0,0" Name="yourscrollViewer1" VerticalAlignment="Top" Width="321" BorderBrush="#FF1E7387" />
        <TextBox Height="92" HorizontalAlignment="Left" Margin="149,207,0,0" Name="mytextBox" VerticalAlignment="Top" Width="269" BorderBrush="#FF1E7387" />
        <Button Content="Send" Height="23" HorizontalAlignment="Left" Margin="424,207,0,0" Name="button1" VerticalAlignment="Top" Width="63" Background="#FF1E7387" Foreground="White" Click="button1_Click" />
    </Grid>
</Window>
